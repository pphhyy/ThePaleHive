  <IncidentDef>
    <defName>PaleInfestation</defName>
    <label>pale infestation</label>
    <targetTags>
      <li>Map_PlayerHome</li>
    </targetTags>
    <workerClass>PphhyyInsects.IncidentWorker_PaleInfestation</workerClass>
    <letterLabel>Infestation</letterLabel>
